
mixin card-block()
	a.before.link-modal(href="#modal-demo")
		+e.img-wrap
			.icon-wrap
				+icon('padlock')
mixin category(im,n,ln)
	.col-md-4.col-sm-6
		+b.category&attributes(attributes)
			+card-block()
			+e.img-wrap.bg-wrap.A(href="#")
				img.res-i.object-fit-js(src=`img/@2x/${im}.jpg` alt="")
				if n
					+e.numb.bg-primary.text-light= n
					 
			+e.body.A(href="#")
				block
			if ln
				+e.studied
					.h5.text-center.fw-700.text-light= ln
	// /.test-category

mixin category-item(im,n, t)
	.col-md-4.col-sm-6.mb-4
		+b.category-item&attributes(attributes)
			+card-block()
			+e.A.img-wrap(href="#")
				if n
					+e.numb.bg-primary.text-light= n
				if t
					+e.timer= t
				img.res-i.object-fit-js(src=`img/@2x/${im}.jpg` alt="")
			+e.body
				block

	// /.category-item

mixin category-video(im,n)
	.col-md-4.col-sm-6.mb-3
		+b.category-item--video&attributes(attributes)
			+card-block()
			+e.A.img-wrap(href="#")
				
				img.res-i.object-fit-js(src=`img/@2x/${im}.jpg` alt="")
				.play-wrap
					+icon('play')
			if n
				+e.numb.bg-primary.text-light= n
			+e.body
				block

	// /.category-video

mixin category-slide(im,n)
	+b.category-slide.bg-white&attributes(attributes)
		+card-block()
		+e.A.img-wrap(href="#")
			img.res-i.object-fit-js.bg(src=`img/@2x/${im}.jpg` alt="")
			if n
				+e.playlist
					span= n
					+icon('playlist')
	 
		+e.body
			block



mixin category-item-modal(im,n,col=" col-md-4 col-sm-6 mb-4")
	div(class= col)
		+b.category-item&attributes(attributes)
			+card-block()
			+e.A.img-wrap(href="#")
				img.res-i.object-fit-js(src=`img/@2x/${im}.jpg` alt="")
			if n
				+e.numb.bg-primary.text-light= n
			+e.body
				block

	// /.category-item