
mixin modal() 
  
	.d-none
		+b.modal-win(id="modal-enjoy" class="   modal-form" )
			.text-center
				+e.title Вам понравился урок?
				+e.btn-wrap
					+b.btn.btn-primary.btn-lg(type="button").mx-1 
						img(src="img/@2x/img-like.png", alt="")
						| Да
						 
					+b.btn.btn-dark.btn-lg(type="button").mx-1 
						img(src="img/@2x/img-dislike.png", alt="")
						| Нет

		// #modal-enjoy
		
		+b.modal-win(id="modal-thanks" class="   modal-form" )
			.text-center
				img(src="img/@2x/like-finger.png", alt="").mb-1
				+e.title Благодарим за оценку!
			 
		// #modal-thanks
		+b.modal-win(id="modal-reset" class="   modal-form" )
			.text-center
				+e.title Сбросить результаты урока?
				+e.btn-wrap
					+b.btn.btn-primary.btn-lg(type="button").mx-1  
						| Да
						 
					+b.btn.btn-dark.btn-lg(type="button").mx-1  
						| Отмена

		// #modal-reset
		

	// modal