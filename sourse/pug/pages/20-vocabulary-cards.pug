include ../blocks/sidebar/_sidebar.pug

block variables
	- let  mainPage= null
block title
	- let  title= 'Словарные карточки (ЛК ученика)'
	title= title
block pagecontent  
	+page()
		+e.head
			.breadcrumb.h6 Словарные карточки
