			table.table
				thead
					th(scope="col") Ученик
					th(scope="col") Домашнее задание
					th(scope="col") Выполнено
				tbody
					+tr('Елена','Gemischte Deklination der Adjektive','17.01.19; 22:18 по мск','Проверить')
					+tr('Татьяна','Quisque eget dictum ante','17.01.19; 22:18 по мск','Проверить')
