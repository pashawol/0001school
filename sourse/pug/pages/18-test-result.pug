								.row.row--md
									.col-md-6
										+list("1","Quisque eget dictum 1",'input-variant--right invalid-block')
									.col-md-6
										+list("3", 'Morbi convallis congue 1','input-variant--right valid-block')
						.row
							+e.col.col-xl-4.col-md-5.col-6
								div.position-relative
