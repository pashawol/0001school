extends layout/main.pug


include ../blocks/s-content/_s-content.pug
include ../blocks/s-contact/_s-contact.pug
include ../blocks/sidebar/_sidebar.pug
include ../blocks/sidebar-right/_sidebar-right.pug
include ../blocks/footer-lesson/_footer-lesson.pug
include body-pages/body-page.pug
block variables
	- let  mainPage= null
block title
	- let  title= 'Интерфейс теста (стр. №2)'
	title= title
block pagecontent  
	+page() 
		+e.head
			.row.align-items-center.pb-4.pt-1
				.col
					a.h6.strong.text-secondaryd.tdn(href="#") 
						+icon("arrow-long-left")
						| Результаты теста
		+e.body 
			.row.row--md
				.col-sm-6
					+panel()
						.h4.strong  Ваш результат
						.bar-wrap
							<canvas id="myChart" width="260" height="260"  ></canvas>
				
				.col-sm-6
					+panel()
						.row.py-3
							.col
								p.mb-1 Правильных ответов
								.h6.strong 30 из 100
							.col-auto.display-1 30%
						a.btn.btn-outline-info.strong.btn-md.mb-4(href="#") Показать мои ответы
			.section
				.h1.strogn Мои ответы
				mixin testp(t, p )
					+panel()(class="panel-block--test")
						+e.title.h2= t
						block
						+e.points-badge Баллов за ответ: 
							if !p 
								| 
								strong 0
							else
								| 
								strong.text-primary= p
				+testp("1. Quisque eget dictum ante",'1')
					.text-lightd.mb-2 Варианты ответов
					ul.list-unstyled
						li 
							span.mr-2 242
						li 
							span.mr-2 242 
							+e.SPAN.badge Ваш ответ
							img(src="img/svg/success.svg", alt="")
						li 
							span.mr-2 242
						li 
							span.mr-2 242
						li 
							span.mr-2 242
